<div id="overall-container">
  <h1>Bookings</h1>
  <div style="overflow-x: auto">
    <table class="table is-hoverable is-fullwidth is-bordered">
      <thead>
      <tr>
        <th>Driver</th>
        <th>Homeowner</th>
        <th>Price</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Complete</th>
        <th>Withdrawn</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.driver_id %></td>
          <td><%= booking.homeowner_id %></td>
          <td><%= booking.price %></td>
          <td><%= booking.start_time.strftime("%F at %T") %></td>
          <td><%= booking.end_time.strftime("%F at %T") %></td>
          <td><%= booking.complete %></td>
          <td><%= booking.withdrawn %></td>
          <td><%= link_to 'Show', booking, :class => 'button' %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'button is-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Booking', new_booking_path %>
</div>