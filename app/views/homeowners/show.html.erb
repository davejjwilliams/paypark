<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @homeowner.user.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @homeowner.address %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @homeowner.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @homeowner.longitude %>
</p>

<p>
  <strong>Description:</strong>
  <%= @homeowner.driveway_description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @homeowner.driveway_price %>
</p>

<p>
  <strong>Driveway active:</strong>
  <%= @homeowner.driveway_active %>
</p>

<p>
  <strong>Last modified:</strong>
  <%= @homeowner.last_modified %>
</p>

<p>
  <strong>Code:</strong>
  <%= @homeowner.activation_code %>
</p>

<p>
  <strong>Verified:</strong>
  <%= @homeowner.driveway_verified %>
</p>

<p>
  <strong>Total ratings:</strong>
  <%= @homeowner.total_ratings %>
</p>

<p>
  <strong>Number ratings:</strong>
  <%= @homeowner.number_ratings %>
</p>

<p>
  <strong>Average Rating:</strong>
  <% if @homeowner.number_ratings == 0 %>
    0
  <% else %>
    <%= (@homeowner.total_ratings.to_f / @homeowner.number_ratings) %>
  <% end %>
</p>

<p>
  <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=18&size=400x300&markers=size:small%7Ccolor:red%7C#{@homeowner.latitude},#{@homeowner.longitude}&key=#{Rails.application.credentials.google[:google_maps_api_key]}", alt: "Map" %>
</p>

<% unless @homeowner.driveway_verified %>
  <%= link_to 'Verify Driveway', verification_path %> |
<% end %>
<%= link_to 'Edit', edit_homeowner_path(@homeowner) %> |
<%= link_to 'Back', homeowners_path %>

