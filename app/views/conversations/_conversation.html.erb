<li>
  <div class="panel" data-conversation-id="<%= conversation.id %>">

    <div class="panel-heading">
      <%= link_to conversation.opposed_user(user).name, '', class: 'has-text-primary toggle-window' %>
      <%= link_to "X", close_conversation_path(conversation), class: "has-text-primary btn btn-default btn-xs is-pulled-right", remote: true, method: :post %>
    </div>

    <div class="panel-body">
      <div class="messages-list" style="overflow-y: auto; height: 400px;">
        <ul>
          <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
        </ul>
      </div>

      <form class="new_message">
        <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
        <input name="user_id" type="hidden" value="<%= user.id %>">

        <div class="field has-addons">
          <div class="control is-expanded">
            <input type="text" name="body" class="input is-rounded">
          </div>
          <div class="control">
            <input type="submit" id="msg-button" class="button is-success" value="Send">
          </div>
        </div>
      </form>

    </div>
  </div>
</li>
