        <% end %>

        <% if Homeowner.exists?(session[:homeowner_id]) %>

          <%= link_to "Homeowner Page", @Homeowner, :class => "navbar-item", :id => "homeowner-page-button", :id => "nav-button", :style => "margin-left: 2%;" %>

